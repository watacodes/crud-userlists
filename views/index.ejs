<%- include('./layout/header') %>

<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if (message) { %>
        <div class="alert alert-dismissable fade show alert-success" role="alert">
          <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
          <strong><%= message.message %></strong>
        </div>
      <% } %>
      <div class="table-responsive">
        <% if (users != '') { %>
          <table class="table table-striped text-center my-3" style="width:100%">
            <thead>
              <tr class="table-dark text-center">
                <th class="text-center">ID</th>
                <th class="text-center">Image</th>
                <th class="text-center">Name</th>
                <th class="text-center">E-mail</th>
                <th class="text-center">Phone</th>
                <th class="text-center">Action</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach((row, idx) => { %>
                <tr class="align-middle">
                  <td><%= idx %></td>
                  <td><img src="<%= row.image %>" width="50" class="img-thumbnail" alt="User image" /></td>
                  <td><%= row.name %></td>
                  <td><%= row.email %></td>
                  <td><%= row.phone %></td>
                  <td>
                    <a href="/edit/<%= row._id %>" class="text-success">
                      <i class="fas fa-edit fa-lg mx-1"></i>
                    </a>
    
                    <a href="/delete/<%= row._id %>" class="text-danger">
                      <i class="fas fa-trash fa-lg mx-1"></i>
                    </a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% }  else { %>
          <h1 class="text-center text-secondary mt-5">No users found!</h1>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('./layout/footer') %>
